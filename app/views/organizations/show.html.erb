

<h1>Organization Details</h1>

<p>Name: <%= @organization.name %></p>
<p>Description: <%= @organization.description %></p>
<p>Location: <%= @organization.location %></p>

<%= link_to 'Edit', edit_organization_path(@organization) %>


<%= button_to 'Delete', organization_path(@organization),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this organization?' } %>

<%= link_to 'Back', organizations_path %>
